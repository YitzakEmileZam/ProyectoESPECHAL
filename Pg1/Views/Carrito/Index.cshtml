@model Pg1.Models.Carrito

@{
    ViewData["Title"] = "Carrito de Compras";
}

<h1>@ViewData["Title"]</h1>

@if (Model.Items.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Producto.Nombre</td>
                    <td>@item.PrecioUnitario.ToString("C")</td>
                    <td>
                        <form asp-action="ActualizarCarrito" method="post">
                            <input type="hidden" name="idProducto" value="@item.Producto.IdProducto" />
                            <input type="number" name="cantidad" value="@item.Cantidad" min="1" max="@item.Producto.Stock" class="form-control" style="width: 80px; display: inline-block;" />
                            <button type="submit" class="btn btn-sm btn-primary">Actualizar</button>
                        </form>
                    </td>
                    <td>@item.Subtotal.ToString("C")</td>
                    <td>
                        <form asp-action="RemoverDelCarrito" method="post">
                            <input type="hidden" name="idProducto" value="@item.Producto.IdProducto" />
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end"><strong>Total:</strong></td>
                <td colspan="2">@Model.Total.ToString("C")</td>
            </tr>
        </tfoot>
    </table>
    <div class="text-end">
        <a asp-controller="Productos" asp-action="Index" class="btn btn-secondary">Seguir comprando</a>
        <a asp-action="Checkout" class="btn btn-primary">Ver resumen de compra</a>
    </div>
}
else
{
    <div class="alert alert-info">
        Tu carrito está vacío
    </div>
    <a asp-controller="Productos" asp-action="Index" class="btn btn-primary">Ir al catálogo</a>
}