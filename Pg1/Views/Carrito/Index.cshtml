@model Pg1.Models.Carrito

@{
    ViewData["Title"] = "Tu Carrito";
}

<h2>Tu Carrito</h2>

    @if (!Model.Items.Any())
    {
        <p>No hay ningún producto en tu carrito.</p>
        <a asp-controller="Productos"
        asp-action="Index"
        class="btn btn-primary">
        Volver al catálogo
        </a>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Precio unitario</th>
                    <th>Cantidad</th>
                    <th>Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Producto.Nombre</td>
                        <td>@item.PrecioUnitario.ToString("C")</td>
                        <td>
                            <form asp-action="ActualizarCarrito"
                                method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden"
                                    name="idProducto"
                                    value="@item.Producto.IdProducto" />
                                <input type="number"
                                    name="cantidad"
                                    value="@item.Cantidad"
                                    min="1"
                                    class="form-control d-inline"
                                    style="width:80px;" />
                                <button type="submit" class="btn btn-sm btn-primary">
                                    OK
                                </button>
                            </form>
                        </td>
                        <td>@item.Subtotal.ToString("C")</td>
                        <td>
                            <form asp-action="RemoverDelCarrito"
                                method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden"
                                    name="idProducto"
                                    value="@item.Producto.IdProducto" />
                                <button type="submit"
                                        class="btn btn-sm btn-danger">
                                    Eliminar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3" class="text-end">Total:</th>
                    <th>@Model.Total.ToString("C")</th>
                    <th></th>
                </tr>
            </tfoot>
        </table>

        <a asp-action="Checkout" class="btn btn-success">
            Ir a pagar
        </a>
        <a asp-controller="Productos"
        asp-action="Index"
        class="btn btn-secondary">
        Seguir comprando
        </a>
}